<div class="text-center col-md-6 col-md-offset-3">
  <div class="row">
    <% if @reaction.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@reaction.errors.count, "error") %> prohibited this reaction from being saved:</h2>
        <ul>
        <% @reaction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <%= form_for @reaction, :html => {:multipart => true} do |f| %>
    <div class="row">
      <%= f.file_field :image, class:'form-control' %><br>
      <%= f.hidden_field :image_cache %>
    </div>
    <div class="row">
      <%= f.label :remote_image_url, "Or, the URL of the image (optional)" %>
      <%= f.text_field :remote_image_url, class:'form-control' %>
    </div>
    <div class="row" id="img_preview">
      <%= image_tag(@reaction.image_url(:thumb)) if @reaction.image? %>
    </div>
    <div class="row">
      If your image or gif does not appear above after hitting tab, make sure the URL is valid (include http:// and/or www.)
    </div>
    <div class="row">
      <%= f.label :keywords, "Keywords for this image. Separate keywords or phrases with commas" %><br>
      <%= f.text_area :keywords, cols:"70", rows:"5", class:'form-control' %>
    </div>
    <div class="row">
      <%= f.submit "Submit", class:'btn btn-primary' %>
    </div>
  <% end %>
</div>
